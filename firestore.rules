rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Development mode: Allow all reads and writes
    // TODO: Add proper authentication rules for production

    // Guild configuration
    match /config/{document=**} {
      allow read, write: if true;
    }

    // Guild members
    match /members/{document=**} {
      allow read, write: if true;
    }

    // Roster collection
    match /roster/{document=**} {
      allow read, write: if true;
    }

    // Raid events
    match /raids/{document=**} {
      allow read, write: if true;
    }

    // User profiles
    match /users/{userId} {
      allow read, write: if true;
    }

    // Character requests
    match /character-requests/{requestId} {
      allow read, write: if true;
    }
  }
}
